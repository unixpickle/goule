<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Goule Edit Task</title>
    <link href='assets/fonts/roboto/imports.css' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="assets/styles/shared.css">
    <link rel="stylesheet" type="text/css" href="assets/styles/fields.css">
    <link rel="stylesheet" type="text/css" href="assets/styles/task_editor.css">
    <script type="text/javascript" src="assets/scripts/jquery.js"></script>
    <script type="text/javascript" src="assets/scripts/form.js"></script>
    <script type="text/javascript" src="assets/scripts/task_editor.js"></script>
    <script type="text/javascript" src="assets/scripts/edit_task.js"></script>
    <script type="text/javascript">
    window.taskData = {{{taskData}}};
    </script>
  </head>
  <body>
    <div id="header">
      <h1>Goule</h1>
      <ul>
        <li class="current"><a href="/">Tasks</a></li>
        <li class="other"><a href="/rules">Proxy Rules</a></li>
        <li class="other"><a href="/tls">TLS</a></li>
        <li class="other"><a href="/general">General</a></li>
      </ul>
    </div>

    <div class="main-content">
      {{#error}}
      <div id="error">{{error}}</div>
      {{/error}}
      <div style="text-align: center">
        <a href="/backlog?id={{id}}">View Backlog</a>
      </div>
      <div id="edit-task-fields"></div>
      <div class="unlabeled-field">
        <button id="cancel">Cancel</button>
        <button id="save">Save</button>
      </div>
    </div>
  </body>
</html>
